<div class="row col-md-10 col-md-offset-1">
  <div id="class_details">
    <div class="row">
      <table class="table">
        <tr>
          <th colspan=6><%= @class_data.course_id %> - <%= @class_data.title %></th>
        </tr>
        <tr>
          <th colspan=6>Lectures</td>
        </tr>
        <tr>
          <th>Day(s)</th>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Instructor(s)</th>
          <th>Bruinwalk Rating</th>
          <th></th>
        </tr>

        <% @independent_classes.each do |independent_class| %>
          <tr>
            <td><%= independent_class.days %></td>
            <% if independent_class.start_time.nil? %>
              <td>N/A</td>
            <% else %>
              <td><%= independent_class.start_time.strftime("%I:%M %P") %></td>
            <% end %>
            <% if independent_class.end_time.nil? %>
              <td>N/A</td>
            <% else %>
              <td><%= independent_class.end_time.strftime("%I:%M %P") %></td>
            <% end %>
            <td><%= independent_class.instructor %></td>
            <td>Bruinwalk Rating</td>
            <td><%= link_to "Details", independent_class_data_path(independent_class) %></td>
          </tr>
        <% end %>
        <tr>
          <th colspan=6>Description</th>
        </tr>
        <tr>
          <td colspan=6><%= @class_data.description %></td>
        </tr>
      </table>
      <table class="table">
        <tr>
          <th colspan=5>Enrollment Information</th>
        </tr>
        <tr>
          <th>Units</th>
          <th>Grade Type</th>
          <th>Restrictions</th>
          <th>Impacted</th>
          <th>Level</th>
        </tr>
        <tr>
          <td><%= @class_data.units %></td>
          <td><%= @class_data.grade_type %></td>
          <td><%= @class_data.restrictions %></td>
          <td><%= @class_data.impacted_class %></td>
          <td><%= @class_data.level %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

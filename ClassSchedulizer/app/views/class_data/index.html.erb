<p id="notice"><%= notice %></p>

<h1>Class Data</h1>

<%= form_tag(class_data_index_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search your major" %>
<%= submit_tag "Search", :name => nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @class_data.each do |class_data| %>
      <tr>
        <td><%= class_data.course_id %> - <%= class_data.title %></td>
        <td><%= link_to 'Show', class_data %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if !@independent_classes.empty? %>
  <table class="table">
    <tr>Lectures</tr>
    <tr>
      <th>Class Title</th>
      <th>Section</th>
      <th>Instructor</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Delete</th>
    </tr>
    <% @independent_classes.each do |independent_class| %>
      <tr>
        <td><%= independent_class.course_id %> - <%= independent_class.title %></td>
        <td><%= independent_class.section %></td>
        <td><%= independent_class.instructor %></td>
        <td><%= independent_class.start_time.strftime("%I:%M %P") %></td>
        <td><%= independent_class.end_time.strftime("%I:%M %P") %></td>
        <td><input type="submit" ind_id="<%= independent_class.lecture_id %>" id="delete-class-btn" class="form-control" value="Delete"></td>
      </tr>
    <% end %>
  </table>
<% end %>

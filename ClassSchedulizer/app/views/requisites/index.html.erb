<p id="notice"><%= notice %></p>

<h1>Requisites</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Operator</th>
      <th>Requisite course id 1</th>
      <th>Requisite course id 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requisites.each do |requisite| %>
      <tr>
        <td><%= requisite.course_id %></td>
        <td><%= requisite.operator %></td>
        <td><%= requisite.requisite_course_id_1 %></td>
        <td><%= requisite.requisite_course_id_2 %></td>
        <td><%= link_to 'Show', requisite %></td>
        <td><%= link_to 'Edit', edit_requisite_path(requisite) %></td>
        <td><%= link_to 'Destroy', requisite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

